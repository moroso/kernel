use syslib::*;
use shared::ipc_defs::*;
use mallot::*;
use file::*;

/* checks the exit status of its children; if a child has exited with error,
 * exits with error as well */
fn child_check() {
    let status: i32 = 0;
    let ret: i32;
    while ((ret = syslib::bide(&status)) >= 0) {
        printf!("RET %d\n", ret);
        if status < 0 {
            printf!("***ERROR***");
            syslib::abscond(-1);
        }
    }

    if (status < 0) {
        printf!("***ERROR***");
        syslib::abscond(-1);
    }
}


fn main() -> i32 {
    let mb = mailbox_new();
    assert!(mb >= 0);
    printf!("file server init exited with status %d\n", file_server_init(50, mb));
    let fs_mb: i32 = -1;
    let args: ipc_args;
    args.dest_id = mb as u32;
    args.long_dest.len = 0;
    args.short_dest.len = sizeof(i32);
    args.short_dest.addr = &fs_mb as *u8;
    args.timeout = -1;
    ipc_recv(&args);
    printf!("mailbox: %d\n", fs_mb);
    
    let i: u32 = 0;
    let response: i32 = -1;
    args.options = 0;
    args.dest_id = fs_mb as u32; 
    args.short_src.len = sizeof(u32);
    args.short_src.addr = &i as *u8;
    args.short_dest.len = sizeof(i32);
    args.short_dest.addr = &response as *u8;
    args.long_src.len = 0;

    for (i = 0; i < 1000; i+=1) {
        ipc_send(&args);
        printf!("response %d\n", response);
    }
    syslib::abscond(1);
    0
}
