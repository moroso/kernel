/* ipc_test.mb 
 * Test of long IPC; repls a child thread, and then sends the page 0xdeadb000 to it
 * Author: Amanda M. Watson
*/

mod syslib;

fn main() -> i32 {
    while(true) {
        let ret = syslib::repl();
        if (ret != 0) {
            let page = 0xDEADB000 as *u8;
            printf!("calling new_pages on address %p\n", page);
            syslib::new_pages(page, 4096, 1024);
            *(page as *u32) = ret;
            let message: *u8 = "parent thread";
            printf!("sending %s\n", message);
            let short_size = 13;
            let send_ret = syslib::ipc_send(ret, page, &message, 4096,
                    &short_size, 0);
            printf!("thread %d received message %s from send (%d)\n", syslib::get_tid(),
                    message, send_ret);
            

        } else {
            printf!("thread %d repled thread %d\n", ret, syslib::get_tid());
            let page = 0xDEADB000  + 4096 as *u8;

            let message: *u8 = "child thread ";
            let len_short = 13;
            let recv_ret = syslib::ipc_recv(page, &message as **u8, 4096, &len_short, 0);
            printf!("recv received message %s (%d)\n", message, recv_ret);
            
            syslib::abscond(1);
        }

    }
    0
}
